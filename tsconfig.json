  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "noImplicitAny": false
  },
  "include": [
    "backend-nest/**/*"
  ],
  "exclude": [
    "node_modules",
    "**/node_modules/*"
  ]
} 